<span id="<%= locals.componentId %>" class="pointer">

    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label35 %></label>
    <input type="text" class="input-text input-text-outline mb-2 border-bottom-forced select_employees_template_search_input" placeholder="<%= UI_DISPLAY_LANG.views.pages.global.placeholder5 %>">
    <select name="" class="input-text" id="<%= locals.selectId ? locals.selectId : 'employee_select' %>">
        
    </select>

</span>

<script>

    $(async function()
    {
        const eventsReceiverId = `<%- locals.eventsReceiverId %>`
        
        const componentId = `<%- locals.componentId %>`
        const component = $('#'+componentId)

        var options = checkJSON(`<%- (locals.options) ? JSON.stringify(locals.options) : '' %>`)
        const defaultOptions = {
            hideCurrent: false,
            search: {
                currentAdministrationOnly: true
            }
        }

        options = {...defaultOptions, ...options}
        
        var selectId = (`<%- locals.selectId %>` == '' || `<%- locals.selectId %>` == null) ? 'employee_select' : `<%- locals.selectId %>`
        var selectionEventName = (`<%- locals.selectionEventName %>` == '' || `<%- locals.selectionEventName %>` == null) ? 'employee-selected' : `<%- locals.selectionEventName %>`

        var select_employees_template_search_input = component.find('.select_employees_template_search_input')

        var employee_select = component.find(`#${selectId}`)

        detectTypingEnd(select_employees_template_search_input, () =>
        {
            select_employees_template_displayAll()
        }, 500)
        // select_employees_template_search_input.on('keyup', select_employees_template_displayAll)
        // display all
        select_employees_template_displayAll()
        async function select_employees_template_displayAll()
        {
            employee_select.html(`<option value=""><%= UI_DISPLAY_LANG.views.pages.global.placeholder11 %></option>`)

            const params = {
                query: select_employees_template_search_input.val(),
                advanced: {
                    administration_id: (options.search.currentAdministrationOnly) ? USER_CONFIG.administration.clinicId : null
                }
            }

            if ( options.search.hasOwnProperty('administration_id') )
            {
                params.advanced.administration_id = options.search.administration_id
            }
            else
            {
                params.advanced.administration_id = (options.search.currentAdministrationOnly) ? USER_CONFIG.administration.clinicId : null
            }

            var res = await EMPLOYEE_MODEL.advancedSearch(params)
            
            if ( res.code == 404 ) return

            // dispatch event
            
            var data = res.data
            var html = ''

            $.each(data, (k,v) =>
            {
                var data = btoa( encodeURIComponent(JSON.stringify(v)) )

                if ( options.hideCurrent && USER_CONFIG.employee_id == v.employee_id )
                {
                    html = ''
                }
                else
                {
                    html += `<option value="${v.employee_id}" data-object="${data}">${v.employee_name}</option>`
                }	
            })
            // add html
            employee_select.append(html)

            if ( isNull(employee_select.find(':selected').val()) ) return
            dispatchCustomEvent(selectionEventName, { 
                employee: {
                    id: employee_select.find(':selected').val(),
                    name: employee_select.find(':selected').text(),
                    data: checkJSON( decodeURIComponent( atob( employee_select.find(':selected').data('object') ) ) ),
                },
                eventsReceiverId: eventsReceiverId 
            }, employee_select[0])
        } 
    })

</script>
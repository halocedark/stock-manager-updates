<span id="<%= locals.componentId %>" class="pointer">

    <label for="" class="form-label"><%= (locals.label) ?? UI_DISPLAY_LANG.views.pages.global.label13 %></label>
    <input type="text" class="input-text input-text-outline mb-2 border-bottom-forced select_centers_template_search_input" placeholder="<%= UI_DISPLAY_LANG.views.pages.global.placeholder5 %>">
    <select name="" class="input-text" id="<%= locals.selectId ? locals.selectId : 'center_select' %>">
        
    </select>

</span>

<script>

    $(async function()
    {
        const eventsReceiverId = `<%- locals.eventsReceiverId %>`
        
        const componentId = `<%- locals.componentId %>`
        const component = $('#'+componentId)

        var options = checkJSON(`<%- (locals.options) ? JSON.stringify(locals.options) : '' %>`)
        const defaultOptions = {
            hideCurrent: false,
        }

        options = {...defaultOptions, ...options}
        
        var selectId = (`<%- locals.selectId %>` == '' || `<%- locals.selectId %>` == null) ? 'center_select' : `<%- locals.selectId %>`
        var selectionEventName = (`<%- locals.selectionEventName %>` == '' || `<%- locals.selectionEventName %>` == null) ? 'center-selected' : `<%- locals.selectionEventName %>`

        var select_centers_template_search_input = component.find('.select_centers_template_search_input')

        var center_select = component.find(`#${selectId}`)

        detectTypingEnd(select_centers_template_search_input, () =>
        {
            select_centers_template_displayAll()
        }, 500)
        // select_centers_template_search_input.on('keyup', select_centers_template_displayAll)
        // display all
        select_centers_template_displayAll()
        async function select_centers_template_displayAll()
        {
            center_select.html(`<option value=""><%= UI_DISPLAY_LANG.views.pages.global.placeholder11 %></option>`)
            var res = await CLINIC_MODEL.search(select_centers_template_search_input.val())
            
            if ( res.code == 404 ) return

            // dispatch event
            
            var data = res.data
            var html = ''

            $.each(data, (k,v) =>
            {
                var data = btoa( encodeURIComponent(JSON.stringify(v)) )
                if ( options.hideCurrent && v.clinicId == USER_CONFIG.administration.clinicId )
                {
                    html += ``
                }
                else
                {
                    html += `<option value="${v.clinicId}" data-object="${data}">${v.clinicName}</option>`
                }
            })
            // add html
            center_select.append(html)

            if ( isNull(center_select.find(':selected').val()) ) return
            dispatchCustomEvent(selectionEventName, { 
                center: {
                    id: center_select.find(':selected').val(),
                    name: center_select.find(':selected').text(),
                    data: checkJSON( decodeURIComponent( atob( center_select.find(':selected').data('object') ) ) ),
                },
                eventsReceiverId: eventsReceiverId 
            }, center_select[0])
        } 
    })

</script>
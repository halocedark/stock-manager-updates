<span id="<%= locals.componentId %>" class="pointer">

    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label39 %></label>
    <input type="text" class="input-text input-text-outline mb-2 border-bottom-forced select_suppliers_template_search_input" placeholder="<%= UI_DISPLAY_LANG.views.pages.global.placeholder5 %>">
    <select name="" class="input-text" id="<%= locals.selectId ? locals.selectId : 'supplier_select' %>">
        
    </select>

</span>

<script>

    $(async function()
    {
        const eventsReceiverId = `<%- locals.eventsReceiverId %>`
        
        const componentId = `<%- locals.componentId %>`
        const component = $('#'+componentId)

        var options = checkJSON(`<%- (locals.options) ? JSON.stringify(locals.options) : '' %>`)
        const defaultOptions = {
            search: {
                currentAdministrationOnly: true
            }
        }

        options = {...defaultOptions, ...options}
        
        var selectId = (`<%- locals.selectId %>` == '' || `<%- locals.selectId %>` == null) ? 'supplier_select' : `<%- locals.selectId %>`
        var selectionEventName = (`<%- locals.selectionEventName %>` == '' || `<%- locals.selectionEventName %>` == null) ? 'supplier-selected' : `<%- locals.selectionEventName %>`

        var select_suppliers_template_search_input = component.find('.select_suppliers_template_search_input')

        var supplier_select = component.find(`#${selectId}`)

        detectTypingEnd(select_suppliers_template_search_input, () =>
        {
            select_suppliers_template_displayAll()
        }, 500)
        // select_suppliers_template_search_input.on('keyup', select_suppliers_template_displayAll)
        // display all
        select_suppliers_template_displayAll()
        async function select_suppliers_template_displayAll()
        {
            supplier_select.html(`<option value=""><%= UI_DISPLAY_LANG.views.pages.global.placeholder11 %></option>`)

            var res = await SUPPLIER_MODEL.search({
                query: select_suppliers_template_search_input.val(),
                advanced: {
                    administration_id: (options.search.currentAdministrationOnly) ? USER_CONFIG.administration.clinicId : null
                }
            })
            
            if ( res.code == 404 ) return

            // dispatch event
            
            var data = res.data
            var html = ''

            $.each(data, (k,v) =>
            {
                var data = btoa( encodeURIComponent(JSON.stringify(v)) )
                html += `<option value="${v.supplier_id}" data-object="${data}">${v.supplier_name}</option>`	
            })
            // add html
            supplier_select.append(html)

            if ( isNull(supplier_select.find(':selected').val()) ) return
            dispatchCustomEvent(selectionEventName, { 
                supplier: {
                    id: supplier_select.find(':selected').val(),
                    name: supplier_select.find(':selected').text(),
                    data: checkJSON( decodeURIComponent( atob( supplier_select.find(':selected').data('object') ) ) ),
                },
                eventsReceiverId: eventsReceiverId 
            }, supplier_select[0])
        } 
    })

</script>
<span id="<%= locals.componentId %>" class="pointer">

    <label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.global.label131 %></label>
    <input type="text" class="input-text input-text-outline mb-2 border-bottom-forced select_contractors_template_search_input" placeholder="<%= UI_DISPLAY_LANG.views.pages.global.placeholder5 %>">
    <select name="" class="input-text" id="<%= locals.selectId ? locals.selectId : 'contractor_select' %>">
        
    </select>

</span>

<script>

    $(async function()
    {
        const eventsReceiverId = `<%- locals.eventsReceiverId %>`
        
        const componentId = `<%- locals.componentId %>`
        const component = $('#'+componentId)

        var options = checkJSON(`<%- (locals.options) ? JSON.stringify(locals.options) : '' %>`)
        const defaultOptions = {
            search: {
                currentAdministrationOnly: true
            }
        }

        options = {...defaultOptions, ...options}
        
        var selectId = (`<%- locals.selectId %>` == '' || `<%- locals.selectId %>` == null) ? 'contractor_select' : `<%- locals.selectId %>`
        var selectionEventName = (`<%- locals.selectionEventName %>` == '' || `<%- locals.selectionEventName %>` == null) ? 'contractor-selected' : `<%- locals.selectionEventName %>`

        var select_contractors_template_search_input = component.find('.select_contractors_template_search_input')

        var contractor_select = component.find(`#${selectId}`)

        detectTypingEnd(select_contractors_template_search_input, () =>
        {
            select_contractors_template_displayAll()
        }, 500)
        // select_contractors_template_search_input.on('keyup', select_contractors_template_displayAll)
        // display all
        select_contractors_template_displayAll()
        async function select_contractors_template_displayAll()
        {
            contractor_select.html(`<option value=""><%= UI_DISPLAY_LANG.views.pages.global.placeholder11 %></option>`)

            const params = {
                query: select_contractors_template_search_input.val(),
                advanced: {
                    administration_id: (options.search.currentAdministrationOnly) ? USER_CONFIG.administration.clinicId : null
                }
            }

            if ( options.search.hasOwnProperty('administration_id') )
            {
                params.advanced.administration_id = options.search.administration_id
            }
            else
            {
                params.advanced.administration_id = (options.search.currentAdministrationOnly) ? USER_CONFIG.administration.clinicId : null
            }

            console.log(params)
            var res = await CONTRACTOR_MODEL.search(params)
            
            if ( res.code == 404 ) return

            // dispatch event
            
            var data = res.data
            var html = ''

            $.each(data, (k,v) =>
            {
                var data = btoa( encodeURIComponent(JSON.stringify(v)) )
                html += `<option value="${v.id}" data-object="${data}">${v.name}</option>`	
            })
            // add html
            contractor_select.append(html)

            if ( isNull(contractor_select.find(':selected').val()) ) return
            dispatchCustomEvent(selectionEventName, { 
                contractor: {
                    id: contractor_select.find(':selected').val(),
                    name: contractor_select.find(':selected').text(),
                    data: checkJSON( decodeURIComponent( atob( contractor_select.find(':selected').data('object') ) ) ),
                },
                eventsReceiverId: eventsReceiverId 
            }, contractor_select[0])
        } 
    })

</script>
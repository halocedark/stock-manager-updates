<div class="container-fluid" id="view_wallets_container">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.all_products_invoices.sectionTitle %></h1>
	</div>
	<div class="mt-3">
		<div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
			<img src="assets/img/utils/info.png" class="alert-icon" alt="">
			<div class="alert-text" id="text"></div>
		</div>

        <div class="row px-0 mx-0 gy-4">

            <div class="col-lg-12 col-md-12">

                <div class="py-4 px-3 mb-3 bg-white border rounded">

                    <div class="mb-4">
                        <%- include(SETTINGS.UI_Settings.MAIN_DIR_NAME+'views/templates/select-employees.template.ejs', {
                            selectId: 'employee_select',
                            options: {
                                showAdministration: false,
                                search: {
                                    currentAdministrationOnly: true,
                                }
                            }
                        }) -%>
                    </div>

                    <h4 class="h4 mb-3"><%= UI_DISPLAY_LANG.views.pages.global.navs.nav67 %></h4>

                    <div class="row gx-4 gy-3 mb-3">
        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                                searchBtnId: 'search_btn',
                                searchInputId: 'search_input',
                            }) -%>
                        </div>
        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                                dateStartId: 'date_start_input',
                                dateEndId: 'date_end_input',
                            }) -%>
                        </div>
        
                        <div class="col-lg col-md col-sm-12">
                            <div class="fs-20 mb-2">
                                <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="wallet_total">0.00</span>
                            </div>
                            <ul class="list-group list-group-flush" id="wallet_actions_extra_data_list">
                                <!-- <li class="list-group-item">An item</li> -->
                            </ul>
                        </div>
        
                    </div>
        
                </div>
                <div id="pagination" class="flex flex-center my-3"></div>
                <div class="table-div bg-white border rounded">
                    <div class="utable shadowed" id="table_element">
                        <div class="thead">
                            <div class="td">#</div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th1 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th20 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th21 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th22 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th23 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th40 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th41 %></div>
                            <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th6 %></div>
                        </div>
                        <div class="tbody">
                         
                        </div>
                    </div>
                </div>

            </div>

        </div>

	</div>
</div>

<script>

$(async function()
{

var page_container = $('#view_wallets_container');
if ( page_container[0] == undefined )
    return;

var ERROR_BOX = page_container.find('#ERROR_BOX');

var deleteSelectedBTN = page_container.find('#deleteSelectedBTN');
var pagination = page_container.find('#pagination');
var table_element = page_container.find('#table_element');

var search_input = page_container.find('#search_input');
var search_btn = page_container.find('#search_btn');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var wallet_total = page_container.find('#wallet_total');
var wallet_actions_extra_data_list = page_container.find('#wallet_actions_extra_data_list')

var center_select = page_container.find('#center_select')
var distributor_select = page_container.find('#distributor_select')
var employee_select = page_container.find('#employee_select')
var client_select = page_container.find('#client_select')
// set primary dates
date_start_input.val(CURRENT_DATE);
date_end_input.val(CURRENT_DATE);
// Unconfirmed actions (owner)
var unconfirmed_wallet_actions_pagination = page_container.find('#unconfirmed_wallet_actions_pagination')
var unconfirmed_wallet_actions_table_element = page_container.find('#unconfirmed_wallet_actions_table_element')

var search_unconfirmed_wallet_actions_btn = page_container.find('#search_unconfirmed_wallet_actions_btn')
var search_unconfirmed_wallet_actions_input = page_container.find('#search_unconfirmed_wallet_actions_input')

var date_start_unconfirmed_wallet_actions_input = page_container.find('#date_start_unconfirmed_wallet_actions_input')
var date_end_unconfirmed_wallet_actions_input = page_container.find('#date_end_unconfirmed_wallet_actions_input')

var unconfirmed_wallet_actions_wallet_total = page_container.find('#unconfirmed_wallet_actions_wallet_total')
var unconfirmed_wallet_actions_extra_data_list = page_container.find('#unconfirmed_wallet_actions_extra_data_list')
var unconfirmed_wallet_actions_confirm_button = page_container.find('#unconfirmed_wallet_actions_confirm_button')
var unconfirmed_wallet_actions_delete_button = page_container.find('#unconfirmed_wallet_actions_delete_button')
// 
date_start_unconfirmed_wallet_actions_input.val(CURRENT_DATE)
date_end_unconfirmed_wallet_actions_input.val(CURRENT_DATE)
// Unconfirmed actions (source)
var unconfirmed_wallet_actions_source_pagination = page_container.find('#unconfirmed_wallet_actions_source_pagination')
var unconfirmed_wallet_actions_source_table_element = page_container.find('#unconfirmed_wallet_actions_source_table_element')

var search_unconfirmed_wallet_actions_source_btn = page_container.find('#search_unconfirmed_wallet_actions_source_btn')
var search_unconfirmed_wallet_actions_source_input = page_container.find('#search_unconfirmed_wallet_actions_source_input')

var date_start_unconfirmed_wallet_actions_source_input = page_container.find('#date_start_unconfirmed_wallet_actions_source_input')
var date_end_unconfirmed_wallet_actions_source_input = page_container.find('#date_end_unconfirmed_wallet_actions_source_input')

var unconfirmed_wallet_actions_source_wallet_total = page_container.find('#unconfirmed_wallet_actions_source_wallet_total')
var unconfirmed_wallet_actions_source_extra_data_list = page_container.find('#unconfirmed_wallet_actions_source_extra_data_list')
var unconfirmed_wallet_actions_source_delete_button = page_container.find('#unconfirmed_wallet_actions_source_delete_button')
// 
date_start_unconfirmed_wallet_actions_source_input.val(CURRENT_DATE)
date_end_unconfirmed_wallet_actions_source_input.val(CURRENT_DATE)

var owner_type = 'employees'

// delete selected
deleteSelectedBTN.on('click', async e =>
{
    PromptConfirmDialog().then(async c =>
    {
        deleteSelectedBTN.addClass('disabled')
        var response = await WALLET_MODEL.actions_batchDelete({
            collection: selectedRows()
        });
        deleteSelectedBTN.removeClass('disabled')
        // hide loader
        TopLoader('', false);
        if ( response.code == 404 )
        {
            ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
            return;
        }
        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
        //
        search_input.trigger('keyup')
    });
});
// search between dates
search_btn.on('click', async e =>
{
    displayAll({
        method_type: 'actions_search',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            owner_type: owner_type,
            owner_id: employee_select.find(':selected').val(),
        }
    })
})
// search
search_input.on('keyup', async e =>
{
    displayAll({
        method_type: 'actions_search',
        query: search_input.val(),
        advanced: {
            owner_type: owner_type,
            owner_id: employee_select.find(':selected').val(),
        }
    })
})
// filter
employee_select.on('change', async e =>
{
    displayAll({
        method_type: 'actions_search',
        query: search_input.val(),
        advanced: {
            owner_type: owner_type,
            owner_id: employee_select.find(':selected').val(),
        }
    })

    var res = await WALLET_MODEL.actions_owner_show({
        owner_id: employee_select.find(':selected').val(),
    })

    wallet_total.text('0.00')

    if ( res.code == 404 ) return

    wallet_total.text( moneyFormat(res.data.total) )
})
// employee-selected
$(document).off('employee-selected').on('employee-selected', e =>
{
    var detail = e.originalEvent.detail

    employee_select.trigger('change')
})
// display all
async function displayAll(params)
{
    //
    table_element.find('.tbody').html('');
    wallet_actions_extra_data_list.html('')
    SectionLoader(table_element)
    if ( params.method_type == 'actions_search' ) var res = await WALLET_MODEL.actions_search(params)

    SectionLoader(table_element, '')
    if ( res.code == 404 )
        return;
    
    var data = res.data;
    var html = '';
    var in_amount_total = 0
    var out_amount_total = 0
    var last_data = firstArrayElement(data)
    $.each(data, (k,v) =>
    {
        in_amount_total += parseFloat(v.in_amount)
        out_amount_total += parseFloat(v.out_amount)
        var _document = (v.document) ? `<a href="${v.document.url}" download="${path.basename(v.document.url)}">${FUI_DISPLAY_LANG.views.pages.global.download_file_btn}</a>` : ''
        html+= `<div class="tr" data-role="row" data-id="${v.id}">
                    <div class="td">
                        <input type="checkbox" class="form-check-input pointer" data-role="CHECK">
                    </div>
                    <div class="td">${v.owner_name}</div>
                    <div class="td">${v.reason}</div>
                    <div class="td">${v.note}</div>
                    <div class="td">
                        (<span class="text-success">${ (v.in_amount > 0) ? '+'+moneyFormat(v.in_amount) : '0.00' }</span>)
                    </div>
                    <div class="td">
                        (<span class="text-danger">${ (v.out_amount > 0) ? '-'+moneyFormat(v.out_amount) : '0.00' }</span>)
                    </div>
                    <div class="td">${v.source_name}</div>
                    <div class="td pointer">${_document}</div>
                    <div class="td">${v.created_at}</div>
                </div>PAG_SEP`
    })
    // add html
    new SmoothPagination(pagination, table_element.find('.tbody'), {
        data: html.split('PAG_SEP'),
        resultsPerPage: 12
    });
    // display extra data
    in_amount_total = parseFloat(in_amount_total).toFixed(2)
    out_amount_total = parseFloat(out_amount_total).toFixed(2)
    var last_amount = (last_data.in_amount > 0) ? `(<span class="text-success">+${moneyFormat(last_data.in_amount)}</span>)` : `(<span class="text-danger">-${moneyFormat(last_data.out_amount)}</span>)`
    wallet_actions_extra_data_list.html(`
        <li class="list-group-item"><span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text24 }:</span> (<span class="text-success">${ (in_amount_total > 0) ? '+'+moneyFormat(in_amount_total) : '0.00' }</span>)</li>
        <li class="list-group-item"><span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text25 }:</span> (<span class="text-danger">${ (out_amount_total > 0) ? '-'+moneyFormat(out_amount_total) : '0.00' }</span>)</li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text26 }: </span>
            ${ FUI_DISPLAY_LANG.views.pages.global.text27 } ${last_data.source_name}, 
            ${ FUI_DISPLAY_LANG.views.pages.global.text28 } ${last_amount}, 
            ${ FUI_DISPLAY_LANG.views.pages.global.in_date } <span class="text-primary">${last_data.created_at}</span>
        </li>
    `)
}
// selected rows
function selectedRows()
{
    var list = [];
    var items = table_element.find('[data-role="row"]');
    for (var i = 0; i < items.length; i++) 
    {
        var parent = $(items[i])
        var check = parent.find('[data-role="CHECK"]');

        if ( check.is(':checked') )
        {
            list.push({
                id: parent.data('id')
            })
        }
    }

    return list;
}

})

</script>
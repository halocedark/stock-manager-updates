			</div>
		</div>
        
	</div>

</div>

<script>

$(function()
{

var page_container = $('#template_container')

if ( !page_container[0] ) return

const ERROR_BOX = page_container.find('#ERROR_BOX')

const deleteSelectedBTN = page_container.find('#deleteSelectedBTN')
const search_btn = page_container.find('#search_btn')
const search_input = page_container.find('#search_input')
const date_start_input = page_container.find('#date_start_input')
const date_end_input = page_container.find('#date_end_input')

const components_total = page_container.find('#components_total')
const components_extra_data_list = page_container.find('#components_extra_data_list')

const pagination = page_container.find('#pagination')
const tableElement = page_container.find('#tableElement')

// tableElement click
tableElement.on('click', async e =>
{
    var target = $(e.target);
    var parent = target.closest('[data-role="row"]')

    if ( target.data('role') == 'UPDATE' )
    {
        
        var res = await PRODUCT_MODEL.center_show({
            productId: parent.data('product-id'),
            administration_id: USER_CONFIG.administration.clinicId,
        })

        if ( res.code == 404 )
        {
            CreateToast('PS', res.message, '')
            return
        }

        goToPage('create-product-components', res.data )
    }
})
// delete selected
deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        deleteSelectedBTN.addClass('disabled')

        var res = await PRODUCT_MODEL.component_batchDelete({
            collection: selectedRows()
        });
        
        deleteSelectedBTN.removeClass('disabled')

        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(res.message)

        CreateToast('PS', res.message, '')
        //
        if ( res.code == 404 ) return
        
        search_input.trigger('keyup')
    });
})
// search
search_btn.on('click', async e =>
{
    search_input.trigger('keyup')
});
detectTypingEnd(search_input, val =>
{
    displayAll({
        method_type: 'component_search',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            administration_id: USER_CONFIG.administration.clinicId,
        }
    })
})

// display all 
search_input.trigger('keyup')
async function displayAll(params)
{
    // total
    components_total.text(0)

    components_extra_data_list.html('')
    SectionLoader(tableElement)
    // clear html
    tableElement.find('.tbody').html('')
    if ( params.method_type == 'component_search' ) var res = await PRODUCT_MODEL.component_search(params)
    
    SectionLoader(tableElement, '')

    if ( res.code == 404 )
        return;

    var data = res.data;
    var html = '';
    var last_data = firstArrayElement(data)
    // total
    components_total.text(data.length)
    $.each(data, (k,v) =>
    {
        html += `
        <div class="tr" data-role="row" data-id="${v.id}" data-product-id="${v.productId}">
            <div class="td">
                <input type="checkbox" class="form-check-input pointer" data-role="CHECK">   
            </div>
            <div class="td">
                <a href="#" class="js_go_to_center_product_page pointer" data-product-id="${v.productId}" data-administration-id="${v.administration_id}">${v.productName}</a>    
            </div>
            <div class="td">
                ${ v.total_quantity } ${ FUI_DISPLAY_LANG.views.pages.global.units[v.total_quantity_unit]}
            </div>
            <div class="td">
                ${ v.item_name }
            </div>
            <div class="td">
                ${ v.item_quantity } ${ FUI_DISPLAY_LANG.views.pages.global.units[v.item_unit]}
            </div>
            <div class="td">
                <div class="mb-2">
                    ${ formatTimeStamp(v.created_at) }
                </div>
                <div class="mb-2">
                    ${ v.created_at }
                </div> 
                <button class="btn btn-primary btn-sm pointer" data-role="UPDATE" data-perm="update_product_components">
                    <span class="no-pointer"><i class="fas fa-edit"></i></span>
                </button> 
            </div>
        </div>PAG_SEP
        `;
    })
    // add html
    new SmoothPagination(pagination, tableElement.find('.tbody'), {
        data: html.split('PAG_SEP')
    });
    
    // extra data
    components_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.item_name}, </span>
            <span class="text-primary">${last_data.created_at}</span> 
        </li>
    `)

}

// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement.find('[data-role="row"]');
    for (var i = 0; i < items.length; i++) 
    {
        var parent = $(items[i])
        var check = parent.find('[data-role="CHECK"]');

        if ( check.is(':checked') )
        {
            list.push({
                id: parent.data('id')
            })
        }
    }

    return list;
}


})

</script>
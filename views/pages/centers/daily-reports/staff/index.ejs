<script>

$(function()
{

var page_container = $('#allDailyReportsStaff_page')
var ERROR_BOX = page_container.find('#ERROR_BOX')

var delete_selected_button = page_container.find('#delete_selected_button')

var search_btn = page_container.find('#search_btn')
var search_input = page_container.find('#search_input')
var date_start_input = page_container.find('#date_start_input')
var date_end_input = page_container.find('#date_end_input')
var employee_type_select = page_container.find('#employee_type_select')

var reports_total = page_container.find('#reports_total');
var reports_extra_data_list = page_container.find('#reports_extra_data_list');

var pagination = page_container.find('#pagination')
var table_element = page_container.find('#table_element')

var daily_report = page_container.find('#daily_report')

// set primary dates

date_start_input.val( CURRENT_DATE );
date_end_input.val( CURRENT_DATE );
// table_element
table_element.on('click', async e =>
{
	var target = $(e.target)
	
	if ( target.data('role') == 'show' )
	{
		var res = await DAILY_REPORT_MODEL.show({
			id: target.closest('.tr').data('id')
		})
		
		var employee_type_name = (FUI_DISPLAY_LANG.lang == 'ar') ? res.data.employee_type.employee_type_name_ar : res.data.employee_type.employee_type_name_fr
		daily_report.slideDown(200)		
		.html(`
			<ul class="list-group list-group-flush">
				<li class="list-group-item">${res.data.employee_name}</li>
				<li class="list-group-item">${employee_type_name}</li>
				<li class="list-group-item">
					<div class="input-text input-text-outline">${res.data.content}</div>
				</li>
			</ul>
		`)
	}
})
// delete_selected_button
delete_selected_button.on('click', e =>
{
	PromptConfirmDialog().then(async c =>
	{
		var res = await DAILY_REPORT_MODEL.batchDelete({
			collection: selectedRows()
		})
		displayAll({
			method_type: 'staff_search',
			query: search_input.val(),
		})
	})
})
// search
search_btn.on('click', async e =>
{
	displayAll({
		method_type: 'staff_search',
		query: search_input.val(),
		advanced: {
			start: date_start_input.val(),
			end: date_end_input.val(),
		}
	})
})
search_input.on('keyup', e =>
{
	displayAll({
		method_type: 'staff_search',
		query: search_input.val(),
	})
})
// filter
employee_type_select.on('change', async e =>
{
	displayAll({
		method_type: 'staff_filter',
		filter: employee_type_select.find(':selected').val(),
	})
})
displayAll({
	method_type: 'staff_search',
	query: search_input.val(),
})
// display all
async function displayAll(params)
{
	// total
    reports_total.text(0)

    reports_extra_data_list.html('')
	table_element.find('.tbody').html('')
	SectionLoader(table_element)
    if ( params.method_type == 'staff_search' )
		var res = await DAILY_REPORT_MODEL.staff_search(params)
	else if ( params.method_type == 'staff_filter' )
		var res = await DAILY_REPORT_MODEL.staff_filter(params)

	SectionLoader(table_element, '')

    var data = res.data
    var html = ''
	var last_data = firstArrayElement(data)
    // total
    reports_total.text(data.length)
    $.each(data, (k,v) =>
    {
        var employee_type_name = (FUI_DISPLAY_LANG.lang == 'ar') ? v.employee_type.employee_type_name_ar : v.employee_type.employee_type_name_fr
        html += `<div class="tr" data-id="${v.id}">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK">
					</div>
					<div class="td">${v.employee_name}</div>
					<div class="td">${employee_type_name}</div>
                    <div class="td text-muted">${strSnippet( v.content )}</div>
					<div class="td">${v.created_at_date} ${v.created_at_time}</div>
					<div class="td">
						<button class="btn btn-primary btn-sm pointer" data-role="show">
							<span class="no-pointer"><i class="fas fa-eye"></i></span>
						</button>		
					</div>
				</div>PAG_SEP`
    })
    // add html
    var options = {
        data: html.split('PAG_SEP'),
        resultsPerPage: 9
    };
    new SmoothPagination(pagination, table_element.find('.tbody'), options);
	// extra data
    reports_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.employee_name}, </span>
            <span class="text-primary">${last_data.created_at_date} ${last_data.created_at_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${ strSnippet(last_data.content, 150) } </span>
        </li>
    `)
}

// selected rows
function selectedRows()
{
	var list = []

	var items = table_element.find('[data-role="CHECK"]')

	for (let i = 0; i < items.length; i++) 
	{
		const check = $(items[i]);
		if ( check.is(':checked') )
		{
			list.push({
				id: check.closest('.tr').data('id')
			})
		}
	}

	return list
}


})

</script>
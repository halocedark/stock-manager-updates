	<div class="wrapper d-none">
		<h1 class="title-medium"></h1>
	</div>
	
	<div class="mt-3">
		<div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
			<img src="assets/img/utils/info.png" class="alert-icon" alt="">
			<div class="alert-text" id="text"></div>
		</div>
		<div class="my-2">
			<button class="btn btn-success btn-sm shadow back-button" data-name="create-daily-reports" data-perm="create_daily_report">
				<%= UI_DISPLAY_LANG.views.pages.global.back_button %>
			</button>
		</div>
		<div class="table-nav">

			<div class="row gx-2 gy-2">
				
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                        searchBtnId: 'search_btn',
                        searchInputId: 'search_input',
                    }) -%>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                        dateStartId: 'date_start_input',
                        dateEndId: 'date_end_input',
                    }) -%>
				</div>
				<div class="col-lg col-md col-sm-12">
                    <div class="fs-20 mb-2">
                        <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="reports_total">0</span>
                    </div>
                    <ul class="list-group list-group-flush" id="reports_extra_data_list">
                        <!-- <li class="list-group-item">An item</li> -->
                    </ul>
                </div> 

			</div>

		</div>
		<div id="pagination" class="my-3 flex flex-center"></div>
		<div class="utable shadowed" id="table_element">
			<div class="thead">
				<div class="td">#</div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th1 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th5 %></div>
                <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th4 %></div>
                <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th6 %></div>
				<div class="td"></div>
			</div>
			<div class="tbody">
				<!--
				<div class="tr">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK" data-classid="">
					</div>
					<div class="td">clinicname</div>
					<div class="td">classname</div>
					<div class="td">classdesc</div>
					<div class="td">date</div>
					<div class="td">
						<button class="btn btn-primary btn-sm pointer" data-role="UPDATE" data-aptid="">
							<span class="no-pointer"><i class="fas fa-edit"></i></span>
						</button>		
					</div>
				</div>
				-->
			</div>
		</div>
	</div>
</div>

<script>

$(function()
{

var page_container = $('#allDailyReports_page')
var ERROR_BOX = page_container.find('#ERROR_BOX')

var pagination = page_container.find('#pagination')
var table_element = page_container.find('#table_element')

var search_input = page_container.find('#search_input');
var search_btn = page_container.find('#search_btn');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var reports_total = page_container.find('#reports_total');
var reports_extra_data_list = page_container.find('#reports_extra_data_list');
// set primary dates

date_start_input.val( CURRENT_DATE );
date_end_input.val( CURRENT_DATE );

// table_element
table_element.on('click', e =>
{
    var target = $(e.target)
    
    if ( target.data('role') == 'EDIT' )
    {
        goToPage('create-daily-reports', {
            id: target.closest('.tr').data('id')
        })
    }
})
// search
search_btn.on('click', e =>
{
    displayAll({
		method_type: 'employee_search',
		query: search_input.val(),
		advanced: {
			start: date_start_input.val(),
			end: date_end_input.val(),
		}
	})
})
search_input.on('keyup', e =>
{
    displayAll({
		method_type: 'employee_search',
		query: search_input.val(),
	})
})
// display all
displayAll({
	method_type: 'employee_search',
	query: search_input.val(),
})
async function displayAll(params)
{
	// total
    reports_total.text(0)

    reports_extra_data_list.html('')
	table_element.find('.tbody').html('')
	SectionLoader(table_element)
	if ( params.method_type == 'employee_search' )
		var res = await DAILY_REPORT_MODEL.employee_search(params)

	SectionLoader(table_element, '')
	
    var data = res.data
    var html = ''
	var last_data = firstArrayElement(data)
    // total
    reports_total.text(data.length)
    $.each(data, (k,v) =>
    {
        var employee_type_name = FUI_DISPLAY_LANG.views.pages.global.employee_type_codes[v.employee_type.employee_type_code]
        html += `<div class="tr" data-id="${v.id}">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK">
					</div>
					<div class="td">${v.employee_name}</div>
					<div class="td">${employee_type_name}</div>
                    <div class="td text-muted">${strSnippet( v.content )}</div>
					<div class="td">${v.created_at_date} ${v.created_at_time}</div>
					<div class="td">
						<button class="btn btn-primary btn-sm pointer" data-role="EDIT" data-perm="update_daily_report">
							<span class="no-pointer"><i class="fas fa-edit"></i></span>
						</button>		
					</div>
				</div>PAG_SEP`
    })
    // add html
    var options = {
        data: html.split('PAG_SEP'),
        resultsPerPage: 9
    };
    new SmoothPagination(pagination, table_element.find('.tbody'), options);
	// extra data
    reports_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.employee_name}, </span>
            <span class="text-primary">${last_data.created_at_date} ${last_data.created_at_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${ strSnippet(last_data.content, 150) } </span>
        </li>
    `)
}

})

</script>
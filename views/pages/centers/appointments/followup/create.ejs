			<input type="text" class="input-text input-text-outline border-bottom-forced" id="searchAptInput" placeholder="<%= UI_DISPLAY_LANG.views.pages.set_clients_for_appointment_sessions.ph01 %>">
		</div>
		<div id="pagination1" class="my-3 flex flex-center"></div>
		<div class="row gx-4 gy-3" id="tableElement1">

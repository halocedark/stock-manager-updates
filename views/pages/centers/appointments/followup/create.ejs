			<div class="text-01" id="sessionName">
				
			</div>
		</div>
		<div class="list-04" id="tableElement4">
			<!--
			<div class="list-item d-flex">
				<div class="mx-2">
					<input type="checkbox" class="form-check-input pointer" data-role="CHECK" data-patientid="">

                        componentId: 'select_category_component',
                        selectId: "category_select",
                    }) -%>
				</div>

                <div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/select-families.template.ejs`, {
                        componentId: 'select_family_component',
                        selectId: "family_select",
                    }) -%>
				</div>

                <div class="col-lg-3 col-md-6 col-sm-12 flex align-items-center">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/products/filters/select-stock-filter2.template.ejs`, {
                        componentId: 'select_stock_filter_component',
                        selectId: 'stock_filter_select',
                    }) -%>
				</div>

            </div>

		</div>
		<div id="pagination" class="my-3 flex flex-center"></div>
		<div class="table-div max-height-100vh">
			<div class="utable separate-rows" id="tableElement">
				<div class="thead">
					<div class="thead">
                        <div class="td">#</div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.all_products.th01 %></div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.all_products.th02 %></div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th64 %></div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th65 %></div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.all_products.th03 %></div>
                        <div class="td"><%= UI_DISPLAY_LANG.views.pages.all_products.th04 %></div>
                        <div class="td"></div>
                    </div>
				</div>
				<div class="tbody max-height-100">
					<!--
					<div class="tr">
						<div class="td">
							<input type="checkbox" class="form-check-input pointer" data-role="CHECK" data-productid="">
						</div>
						<div class="td">
							<img src="" style="width:50px;height:50px;" class="img-thumbnail" alt="">
						</div>
						<div class="td">name</div>
						<div class="td">price</div>
						<div class="td">quantity</div>
						<div class="td">
							<button class="btn btn-primary btn-sm rounded-0" data-role="UPDATE" data-productid="${v.productId}">
								<i class="fas fa-edit no-pointer"></i>
							</button>
						</div>
					</div>
					-->
				</div>
			</div>
		</div>
	</div>
</div>

<script>

$(async function()
{

var page_container = $('#all_center_inventory_products');
if ( page_container[0] == undefined )
    return;

var ERROR_BOX = page_container.find('#ERROR_BOX');
var deleteSelectedBTN = page_container.find('#deleteSelectedBTN');

var pagination = page_container.find('#pagination');
var tableElement = page_container.find('#tableElement');

var search_btn = page_container.find('#search_btn')
var search_input = page_container.find('#search_input')
var date_start_input = page_container.find('#date_start_input')
var date_end_input = page_container.find('#date_end_input')

var products_total = page_container.find('#products_total');
var products_extra_data_list = page_container.find('#products_extra_data_list');

const category_select = page_container.find('#category_select');
const family_select = page_container.find('#family_select');
const stock_filter_select = page_container.find('#stock_filter_select')
// tableElement click
tableElement.on('click', async e =>
{
    var target = $(e.target);
    if ( target.data('role') == 'UPDATE' )
    {
        var productId = target.data('productid');
        
        var res = await PRODUCT_MODEL.center_show({
            productId: productId,
            administration_id: USER_CONFIG.administration.clinicId,
        })

        if ( res.code == 404 )
        {
            CreateToast('PS', res.message, '')
            return
        }

        CreateProductDialog__Centers(res.data)
    }
});

// delete selected
deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        // display loader
        deleteSelectedBTN.addClass('disabled')

        var response = await PRODUCT_MODEL.center_batchDelete({
            administration_id: USER_CONFIG.administration.clinicId,
            list: selectedRows()
        });

        deleteSelectedBTN.removeClass('disabled')

        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
        CreateToast('PS', response.message, '')

        if ( response.code == 404 ) return
        
        //
        search_input.trigger('keyup')
    });
});
// search
detectTypingEnd(search_input, val =>
{ 
    const params = {
        method_type: 'center_advancedSearch',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            administration_id: USER_CONFIG.administration.clinicId,
            category_id: category_select.find(':selected').val(),
            family_id: family_select.find(':selected').val(),
            orderBy: 'id',
            order: 'desc',
        }
    }

    // clear filters
    delete params.advanced.is_below_low_stock_threshold
    delete params.advanced.is_below_average_low_stock_threshold
    delete params.advanced.is_above_average_low_stock_threshold
    delete params.advanced.is_max_average_low_stock_threshold

    const stock_filter = stock_filter_select.find(':selected')

    if ( stock_filter.val() == 'is_below_low_stock_threshold' )
    {
        params.advanced.is_below_low_stock_threshold = true
    }
    else if ( stock_filter.val() == 'is_below_average_low_stock_threshold' )
    {
        params.advanced.is_below_average_low_stock_threshold = true
    }
    else if ( stock_filter.val() == 'is_above_average_low_stock_threshold' )
    {
        params.advanced.is_above_average_low_stock_threshold = true
    }
    else if ( stock_filter.val() == 'is_max_average_low_stock_threshold' )
    {
        params.advanced.is_max_average_low_stock_threshold = true
    }

    console.log( params.advanced )
    displayAll(params)
})
search_btn.on('click', async e =>
{
    search_input.trigger('keyup')
})

// display all
search_input.trigger('keyup')
//CreateProductDialog__Centers:created
$(document).on('CreateProductDialog__Centers:created', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})
//CreateProductDialog__Centers:updated
$(document).on('CreateProductDialog__Centers:updated', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})

async function displayAll(params)
{
    // total
    products_total.text(0)

    products_extra_data_list.html('')
    tableElement.find('.tbody').html('')
    if ( params.method_type == 'center_advancedSearch' )
        var res = await PRODUCT_MODEL.center_advancedSearch(params)

    if ( res.code == 404 )
        return;

    var data = res.data;
    console.log(data)
    var html = '';
    var last_data = firstArrayElement(data)
    // total
    products_total.text(data.length)
    $.each(data, (k,v) =>
    {
        var productImageUrl = (v.image) ? imgFallback(v.image.url) : imgFallback('');

        const productQuantity = parseInt(v.productQuantity)
        const low_stock_threshold = parseInt(v.low_stock_threshold)
        const average_low_stock_threshold = parseInt(v.average_low_stock_threshold)

        var quantityFieldBGColor = ''

        if (productQuantity < low_stock_threshold) // is_below_low_stock_threshold
        {
            quantityFieldBGColor = 'bg-color-32'
        }

        if (productQuantity <= average_low_stock_threshold && productQuantity >= low_stock_threshold) // is_below_average_low_stock_threshold
        {
            quantityFieldBGColor = 'bg-color-33'
        }

        if (productQuantity > average_low_stock_threshold && productQuantity < average_low_stock_threshold * 2) // is_above_average_low_stock_threshold
        {
            quantityFieldBGColor = 'bg-color-34'
        }

        if (productQuantity >= average_low_stock_threshold * 2) // is_max_average_low_stock_threshold
        {
            quantityFieldBGColor = 'bg-color-5'
        }

        html += `<div class="tr flex-align-center" data-role="row" data-id="${v.productId}">
                    <div class="td">
                        <input type="checkbox" class="form-check-input pointer" data-role="CHECK" data-productid="${v.productId}">
                    </div>
                    <div class="td">
                        <img src="${productImageUrl}" style="width:50px;height:50px;" class="img-thumbnail" alt="">
                    </div>
                    <div class="td">
                        <a href="#" class="js_go_to_center_product_page pointer" data-product-id="${v.productId}" data-administration-id="${v.administration_id}">${v.productName}</a>
                        
                    </div>
                    <div class="td">
                        ${v.category_name}    
                    </div>
                    <div class="td">
                        ${v.family_name}  
                    </div>
                    <div class="td">
                        <div class="mb-2">${FUI_DISPLAY_LANG.views.pages.global.th33}: <span class="text-success">${ moneyFormat(v.productBuyPrice) }</span></div>
                        <div class="mb-2">${FUI_DISPLAY_LANG.views.pages.global.th34}: <span class="text-success">${ moneyFormat(v.productPrice) }</span></div>
                        <div class="mb-2">${FUI_DISPLAY_LANG.views.pages.global.th35}: <span class="text-success">${ moneyFormat(v.productWholesalePrice) }</span></div>
                        <div class="mb-2">${FUI_DISPLAY_LANG.views.pages.global.th36}: <span class="text-success">${ moneyFormat(v.productHalfWholesalePrice) }</span></div>
                        <div class="mb-2">${FUI_DISPLAY_LANG.views.pages.global.th63}: <span class="text-success">${ moneyFormat(v.cost_price) }</span></div>
                    </div>
                    <div class="td ${quantityFieldBGColor}">
                        ${v.productQuantity} ${FUI_DISPLAY_LANG.views.pages.global.units[v.unit] }    
                    </div>
                    <div class="td">

                        <div class="mb-2">${ formatTimeStamp(v.created_at) }</div>
                        <div class="">${ v.created_at }</div>

                        <button class="btn btn-primary btn-sm rounded-0 pointer" data-role="UPDATE" data-perm="update_product" data-productid="${v.productId}">
                            <i class="fas fa-edit no-pointer"></i>
                        </button>
                    </div>
                </div>PAG_SEP`;
    });
    // add html
    var options = {
        data: html.split('PAG_SEP')
    };
    new SmoothPagination(pagination, tableElement.find('.tbody'), options);
    // extra data
    products_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.productName}, </span>
            <span class="text-primary">${last_data.created_at}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text41 }: </span>
            <span>${ (last_data.productDesc) ?? '' } </span>
        </li>
    `)
}
// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement.find('[data-role="row"]');
    for (var i = 0; i < items.length; i++) 
    {
        var parent = $(items[i]);
        var check = parent.find('[data-role="CHECK"]')
        if ( check.is(':checked') )
            list.push({ id: parent.data('id') });
    }

    return list;
}

})

</script>
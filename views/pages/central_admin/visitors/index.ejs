<div class="container-fluid" id="view_visitors_container">

	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.all_clinics.sectionTitle %></h1>
	</div>

	<div class="alert alert-info mt-3 mb-2" style="display:none;" id="ERROR_BOX">
		<img src="assets/img/utils/info.png" class="alert-icon" alt="">
		<div class="alert-text" id="text"></div>
	</div>

	<div class="mt-3">

		<div class="table-nav">
			
			<div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12">
					<button class="btn btn-danger btn-sm" id="deleteSelectedBTN" data-perm="delete_visitors"><%= UI_DISPLAY_LANG.views.pages.global.delete_selected_button %></button>
				</div>

				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                        searchBtnId: 'search_btn',
                        searchInputId: 'search_input',
                    }) -%>
				</div>
                <div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                        dateStartId: 'date_start_input',
                        dateEndId: 'date_end_input',
                        dataIgnoreDefaultValue: true,
                    }) -%>
				</div>
				<div class="col-lg col-md col-sm-12">
                    <div class="fs-20 mb-2">
                        <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="visitors_total">0</span>
                    </div>
                    <ul class="list-group list-group-flush" id="visitors_extra_data_list">
                        <!-- <li class="list-group-item">An item</li> -->
                    </ul>
                </div> 

			</div>

		</div>

		<div id="pagination" class="my-3 flex flex-center"></div>

		<div id="tableElement" class="row gy-3">

            <!-- <div class="col-lg-3 col-md-4 js_checkable_box_row">

                <div class="px-2 py-3 rounded border bg-white js_checkable_box">
                    <input type="checkbox" class="js_row_checkbox d-none" data-role="check">
                    <div class="no-pointer">
                        <div class="">
                            <div class="fs-17 fw-600">Abdennour Adouani</div> 
                            <div class="fs-14 fw-400 text-color-10">0673479803</div>
                        </div>
                    </div>
                </div>

            </div> -->

		</div>
        
	</div>

</div>

<script>

$(function()
{

var page_container = $('#view_visitors_container')

if ( !page_container[0] ) return

var ERROR_BOX = page_container.find('#ERROR_BOX')

var deleteSelectedBTN = page_container.find('#deleteSelectedBTN')

var search_btn = page_container.find('#search_btn')
var search_input = page_container.find('#search_input')
var date_start_input = page_container.find('#date_start_input')
var date_end_input = page_container.find('#date_end_input')

var visitors_total = page_container.find('#visitors_total')
var visitors_extra_data_list = page_container.find('#visitors_extra_data_list')

var pagination = page_container.find('#pagination')
var tableElement = page_container.find('#tableElement')

deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        deleteSelectedBTN.addClass('disabled')

        var res = await VISITOR_MODEL.batchDelete({
            collection: selectedRows()
        })

        deleteSelectedBTN.removeClass('disabled')

        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(res.message)
        CreateToast('PS', res.message, '')

        if ( res.code == 404 ) return

        search_input.trigger('keyup')
    });
})
// Search
search_btn.on('click', e =>
{
    search_input.trigger('keyup')
})

detectTypingEnd(search_input, val =>
{
    displayAll({
        method_type: 'search',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            orderBy: 'id',
            order: 'desc',
        }
    })
})
search_input.trigger('keyup')

// display all
async function displayAll(params)
{
    visitors_total.text(0)

    tableElement.html('')
    SectionLoader(tableElement)

    if ( params.method_type == 'search' ) var res = await VISITOR_MODEL.search(params)

    SectionLoader(tableElement, '')

    if ( res.code == 404 ) return

    var data = res.data
    var last_data = firstArrayElement(data)
    var html = ''
    // total
    visitors_total.text(data.length)

    $.each(data, (k,v) =>
    {
        html += `<div class="col-lg-3 col-md-4 js_checkable_box_row" data-role="row" data-id="${v.id}">

                    <div class="px-2 py-3 rounded border bg-white js_checkable_box">
                        <input type="checkbox" class="js_row_checkbox d-none" data-role="CHECK">
                        <div class="no-pointer">
                            <div class="">
                                <div class="fs-17 fw-600">Abdennour Adouani</div> 
                                <div class="fs-14 fw-400 text-color-10 mb-2">0673479803</div>
                                <div class="fs-14 fw-400 text-color-17">${v.created_at_diff.auto} (${v.created_at})</div>
                            </div>
                        </div>
                    </div>

                </div>PAG_SEP`
    })

    new SmoothPagination(pagination, tableElement, {
        data: html.split('PAG_SEP'),
    })

    // extra data
    visitors_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.name} (${last_data.phone}), </span>
            <span class="text-primary">${last_data.created_at}</span> 
        </li>
    `)


}
// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement.find('[data-role="row"]');
    for (var i = 0; i < items.length; i++) 
    {
        var parent = $(items[i])
        var check = parent.find('[data-role="CHECK"]')

        if ( check.is(':checked') )
        {
            list.push({
                id: parent.data('id'),
            })
        }
    }

    return list
}

})

</script>
<div class="container-fluid" id="allCentralAdminEmployeeActionsContainer">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.all_employees.sectionTitle %></h1>
	</div>
	<div class="mt-3">
		<div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
			<img src="assets/img/utils/info.png" class="alert-icon" alt="">
			<div class="alert-text" id="text"></div>
		</div>
		<div class="table-nav">

			<div class="row gx-2 gy-5 mb-2">

				<div class="col-lg-12 col-md-12 col-sm-12">
					<button class="btn btn-danger btn-sm" id="deleteSelectedBTN" data-perm="delete_employee_actions">
						<%= UI_DISPLAY_LANG.views.pages.global.delete_selected_button %>
					</button>
				</div>

				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                        searchBtnId: 'search_btn',
                        searchInputId: 'search_input',
                    }) -%>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                        dateStartId: 'date_start_input',
                        dateEndId: 'date_end_input',
                        dataIgnoreDefaultValue: true,
                    }) -%>
				</div>
				<div class="col-lg col-md col-sm-12">
                    <div class="fs-20 mb-2">
                        <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="actions_total">0</span>
                    </div>
                    <ul class="list-group list-group-flush" id="actions_extra_data_list">
                        <!-- <li class="list-group-item">An item</li> -->
                    </ul>
                </div> 

			</div>

			<div class="row">

				<div class="col-lg-2 col-md-3 col-sm-12">
                    <%- include(SETTINGS.UI_Settings.MAIN_DIR_NAME+'views/templates/select-employee-type.template.ejs', {
                        componentId: 'filter',
                        selectId: 'employee_type_select',
                        eventsReceiverId: 'allCentralAdminEmployeeActionsContainer',
						employeeTypeTargetCenter: 'CENTRAL_ADMINISTRATION',
                    }) -%>
                </div>

                <div class="col-lg-2 col-md-3 col-sm-12">
                    <%- include(SETTINGS.UI_Settings.MAIN_DIR_NAME+'views/templates/select-attribute.template.ejs', {
                        componentId: 'select_attribute_component_',
                        selectId: 'action_select',
                        eventsReceiverId: 'allCentersEmployeeActionsContainer',
                    }) -%>
                </div>

			</div>

		</div>
		<div id="pagination" class="my-3 flex flex-center"></div>
		<div class="utable shadowed" id="table_element">
			<div class="thead">
				<div class="td">#</div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th11 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th12 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th13 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th14 %></div>
				<div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th6 %></div>
			</div>
			<div class="tbody">
				
				<!-- <div class="tr" data-role="row" data-id="${v.id}">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK">
					</div>
					<div class="td">${v.employee_name}</div>
					<div class="td">${v.administration}</div>
					<div class="td">${v.employee_type.employee_type_name_ar}</div>
					<div class="td">${v.action_performed}</div>
					<div class="td">${v.created_at_date} | ${v.created_at_time}</div>
				</div> -->
				
			</div>
		</div>
	</div>
</div>

<script>

$(async function()
{

var page_container = $('#allCentralAdminEmployeeActionsContainer')
if ( !page_container[0] ) return

var ERROR_BOX = page_container.find('#ERROR_BOX')

var deleteSelectedBTN = page_container.find('#deleteSelectedBTN')

var search_input = page_container.find('#search_input');
var search_btn = page_container.find('#search_btn');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var employee_type_select = page_container.find('#employee_type_select');
var action_select = page_container.find('#action_select');

var actions_total = page_container.find('#actions_total');
var actions_extra_data_list = page_container.find('#actions_extra_data_list');

var pagination = page_container.find('#pagination')
var table_element = page_container.find('#table_element')

deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(c =>
    {
        SectionLoader(table_element);
        EMPLOYEE_ACTION_MODEL.batchDelete( {
            list: getSelectedRows()
        } ).then(response =>
        {
            // hide loader
            SectionLoader(table_element, '');
            if ( response.code == 404 )
            {
                ERROR_BOX.show(0).delay(7*1000).hide(0)
                .find('#text').text(response.message);
                return;
            }
            ERROR_BOX.show(0).delay(7*1000).hide(0)
            .find('#text').text(response.message);
            //
            search_input.trigger('keyup')
        });
    });
});
// search
search_btn.on('click', e =>
{
    search_input.trigger('keyup')
});
detectTypingEnd(search_input, val =>
{
    displayAll({
        method_type: 'search',
        query: val,
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            employee_type_id: employee_type_select.find(':selected').val(),
            administration_id: 0,
            action: action_select.find(':selected').val(),
        }
    })
})

// display all
search_input.trigger('keyup')
async function displayAll(params)
{
	// total
    actions_total.text(0)

    actions_extra_data_list.html('')
	table_element.find('.tbody').html('')
	SectionLoader(table_element)
	if ( params.method_type == 'search' )
		var res = await EMPLOYEE_ACTION_MODEL.search(params)
	else if ( params.method_type == 'filter' )
		var res = await EMPLOYEE_ACTION_MODEL.filterLocal(params)
	SectionLoader(table_element, '')

	if ( res.code == 404 ) return

	var data = res.data
	var html = ''
	var last_data = firstArrayElement(data)
    // total
    actions_total.text(data.length)
	$.each(data, (k,v) =>
	{
		html += `<div class="tr" data-role="row" data-id="${v.id}">
					<div class="td">
						<input type="checkbox" class="form-check-input pointer" data-role="CHECK">
					</div>
					<div class="td">${v.employee_name}</div>
					<div class="td">${v.administration_name}</div>
					<div class="td">${FUI_DISPLAY_LANG.views.pages.global.employee_type_codes[v.employee_type_code]}</div>
					<div class="td">${v.action_performed}</div>
					<div class="td">${v.created_at_date} | ${v.created_at_time}</div>
				</div>PAG_SEP`
	})

	new SmoothPagination(pagination, table_element.find('.tbody'), {
		data: html.split('PAG_SEP')
	})
	// extra data
    actions_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.employee_name}, </span>
            <span class="text-primary">${last_data.created_at_date} ${last_data.created_at_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text47 }: </span>
            <span>${ (last_data.action_performed) ?? '' } </span>
        </li>
		<li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${ (last_data.note) ?? '' } </span>
        </li>
    `)
}
// get selected
function getSelectedRows()
{
    var list = [];
    var checks = table_element.find('[data-role="CHECK"]');
    for (var i = 0; i < checks.length; i++) 
    {
        var check = $(checks[i]);
        var parent = check.closest('[data-role="row"]')
        if ( check.is(':checked') )
            list.push({ id: parent.data('id') });
    }

    return list;
}

})

</script>
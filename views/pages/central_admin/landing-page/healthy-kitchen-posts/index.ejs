<div class="container-fluid" id="allhealthyKitchenPostContainer">
    
    <div class="wrapper d-none d-flex">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.all_appointements.sectionTitle %></h1>
        <div class="width-10px"></div>
        <div class="d-flex align-items-center">
			<a href="#" class="fs-17 fw-500 text-success" data-perm="create_healthy_kitchen_posts" onclick="CreateHealthyKitchenPostDialog__CentralAdmin()">
				<%= UI_DISPLAY_LANG.views.pages.global.add_new_button %>
            </a>
		</div>
	</div>

	<div class="alert alert-info mt-3 mb-2" style="display:none;" id="ERROR_BOX">
		<img src="assets/img/utils/info.png" class="alert-icon" alt="">
		<div class="alert-text" id="text"></div>
	</div>

	<div class="mt-3 WRAPPER" id="wrapper01">
		<div class="table-nav">
			<div class="row gx-4 gy-3">

                <div class="col-lg-12 col-md-12 col-sm-12">
					<button class="btn btn-danger btn-sm" id="deleteSelectedBTN" data-perm="delete_healthy_kitchen_posts">
						<%= UI_DISPLAY_LANG.views.pages.global.delete_selected_button %>
					</button>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                        searchBtnId: 'search_btn',
                        search_inputId: 'search_input',
                    }) -%>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                        dateStartId: 'date_start_input',
                        dateEndId: 'date_end_input',
                        dataIgnoreDefaultValue: true,
                    }) -%>
				</div>
                <div class="col-lg col-md col-sm-12">
                    <div class="fs-20 mb-2">
                        <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="healthy_kitchen_posts_total">0</span>
                    </div>
                    <ul class="list-group list-group-flush" id="healthy_kitchen_posts_extra_data_list">
                        <!-- <li class="list-group-item">An item</li> -->
                    </ul>
                </div> 

			</div>
		</div>
		<div id="pagination" class="my-3 flex flex-center"></div>
		<div class="row gx-4 gy-3" id="table_element">
			<!--
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card hover-shadow" data-role="APT" data-aptid="" style="cursor: pointer;">
					<div class="card-body no-pointer">
						<div class="h5">قسم الحجامة</div>
						<div class="text-02">(4) جلسات</div>
					</div>
				</div>
			</div>
			-->
		</div>
	</div>
</div>

<script>

$(function()
{

var page_container = $('#allhealthyKitchenPostContainer');
if ( !page_container[0] ) return

var ERROR_BOX = page_container.find('#ERROR_BOX');
var deleteSelectedBTN = page_container.find('#deleteSelectedBTN');
var pagination = page_container.find('#pagination');
var table_element = page_container.find('#table_element');

var search_btn = page_container.find('#search_btn');
var search_input = page_container.find('#search_input');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var healthy_kitchen_posts_total = page_container.find('#healthy_kitchen_posts_total');
var healthy_kitchen_posts_extra_data_list = page_container.find('#healthy_kitchen_posts_extra_data_list');

var wrapper01 = page_container.find('#wrapper01');

// table_element click
table_element.off('click');
table_element.on('click', async e =>
{
    var target = $(e.target);
    if ( target.data('role') == 'UPDATE' )
    {
        var parent = target.closest('[data-role="row"]')
        var id = parent.data('id');

        var res = await HEALTHY_KITCHEN_POST_MODEL.show({
            id: id
        })

        if ( res.code == 404 )
        {
            CreateToast('PS', res.message,'')
            return
        }

        CreateHealthyKitchenPostDialog__CentralAdmin(res.data)
    }
});
// delete
deleteSelectedBTN.off('click');
deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        deleteSelectedBTN.addClass('disabled')

        var res = await HEALTHY_KITCHEN_POST_MODEL.batchDelete( {
            list: getSelectedRows()
        } )

        // hide loader
        deleteSelectedBTN.removeClass('disabled')

        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(res.message)

        CreateToast('PS', res.message, '')
        if ( response.code == 404 ) return

        search_input.trigger('keyup')
    });
});
// search
search_btn.on('click', e =>
{
    search_input.trigger('keyup')
})
detectTypingEnd(search_input, val =>
{
    displayAll({
        query: val,
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            orderBy: 'id',
            order: 'desc',
        }
    })
})
//CreateHealthyKitchenPostDialog:post-created
$(document).on('CreateHealthyKitchenPostDialog:post-created', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})
//CreateHealthyKitchenPostDialog:post-updated
$(document).on('CreateHealthyKitchenPostDialog:post-updated', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})
// display all
search_input.trigger('keyup')
async function displayAll(params)
{
    // total
    healthy_kitchen_posts_total.text(0)

    healthy_kitchen_posts_extra_data_list.html('')
    table_element.html('')
    // display loader
    SectionLoader(table_element);
    var response = await HEALTHY_KITCHEN_POST_MODEL.search(params)
    
    // hide loader
    SectionLoader(table_element, '');
    // clear html
    table_element.html('');
    if ( response.code == 404 )
        return;

    var data = response.data;
    var html = '';
    var last_data = firstArrayElement(data)
    // total
    healthy_kitchen_posts_total.text(data.length)
    $.each(data, (k,v) =>
    {
        html+= `<div class="col-lg-3 col-md-6 col-sm-12" data-role="row" data-id="${v.id}">
                    <div class="card h-100">
                        <div class="form-check py-3 px-2">
                            <input class="form-check-input" type="checkbox" value="" id="checkbox_${v.id}" data-role="check">
                            <label class="form-check-label" for="checkbox_${v.id}">
                                ${ FUI_DISPLAY_LANG.views.pages.global.label22 }
                            </label>
                        </div>
                        <img src="${v.image.url}" class="card-img-top max-height-250px" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">${v.name}</h5>
                            <p>${strSnippet(v.description)}</p>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="d-inline-block text-dark" data-role="UPDATE" data-perm="update_healthy_kitchen_posts">
                                <i class="fas fa-edit no-pointer"></i>
                            </a>
                        </div>
                    </div>
                </div>PAG_SEP`;	
    });
    // add html
    var options = {
        data: html.split('PAG_SEP'),
        resultsPerPage: 9
    };
    new SmoothPagination(pagination, table_element, options);
    // extra data
    healthy_kitchen_posts_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.name}, </span>
            <span class="text-primary">${last_data.created_at_date} ${last_data.created_at_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${ strSnippet(last_data.description, 150) } </span>
        </li>
    `)
}
// get selected
function getSelectedRows()
{
    var list = [];
    var checks = table_element.find('[data-role="row"]');
    for (var i = 0; i < checks.length; i++) 
    {
        var parent = $(checks[i]);
        var check = parent.find('[data-role="check"]')
        if ( check.is(':checked') )
            list.push({ id: parent.data('id') });
    }

    return list;
}


})

</script>
<script>

$(function()
{

var advertisementsClientsContainer = $('#advertisementsClientsContainer');
if ( advertisementsClientsContainer[0] == undefined )
    return;

var ERROR_BOX = advertisementsClientsContainer.find('#ERROR_BOX');
var searchBTN = advertisementsClientsContainer.find('#searchBTN');
var searchInput = advertisementsClientsContainer.find('#searchInput');
var fromDateInput = advertisementsClientsContainer.find('#fromDateInput');
var toDateInput = advertisementsClientsContainer.find('#toDateInput');
var deleteSelectedBTN = advertisementsClientsContainer.find('#deleteSelectedBTN');
var pagination = advertisementsClientsContainer.find('#pagination');
var tableElement = advertisementsClientsContainer.find('#tableElement');

// delete selected
deleteSelectedBTN.off('click');
deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        // display loader
        SectionLoader(tableElement);
        var response = await ADVERTISEMENT_MODEL.clients_batchDelete(selectedRows());
        // hide loader
        SectionLoader(tableElement, '');
        if ( response.code == 404 )
        {
            ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
            return;
        }
        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
        //
        displayAll();
    });
});
// search
searchBTN.off('click');
searchBTN.on('click', async e =>
{
    SectionLoader(tableElement);
    var response = await ADVERTISEMENT_MODEL.clients_search({
        query: searchInput.val(),
        advanced: {
            start: fromDateInput.val(),
            end: toDateInput.val()
        }
    });
    SectionLoader(tableElement, '');
    tableElement.html('');
    if ( response.code == 404 )
        return;

    var data = response.data;
    var html = '';

    $.each(data, (k,v) =>
    {
        if ( FUI_DISPLAY_LANG.lang == 'ar' )
        {
            html += `<div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card hover-shadow" data-role="AD_CLIENT" data-id="${v.id}" style="cursor: pointer;">
                            <div class="card-body no-pointer">
                                <div class="py-2 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" data-role="CHECK" data-id="${v.id}" value="" id="flexCheckDefault_${v.id}">
                                        <label class="form-check-label pointer" for="flexCheckDefault_${v.id}">
                                            قم بالتحديد
                                        </label>
                                    </div>
                                </div>
                                <div class="h5">
                                    ${v.client_name}
                                    <span class="text-02 text-muted">(${v.client_phone})</span>
                                </div>
                                <div class="text-04">سجل من خلال: ${v.ad_name}</div>
                                <div class="text-04">سجل في: ${v.client_date}</div>
                            </div>
                        </div>
                    </div>PAG_SEP`;	
        }
        else if ( FUI_DISPLAY_LANG.lang == 'fr' )
        {
            html += `<div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card hover-shadow" data-role="AD_CLIENT" data-id="${v.id}" style="cursor: pointer;">
                            <div class="card-body no-pointer">
                                <div class="py-2 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" data-role="CHECK" data-id="${v.id}" value="" id="flexCheckDefault_${v.id}">
                                        <label class="form-check-label pointer" for="flexCheckDefault_${v.id}">
                                            Choisissez
                                        </label>
                                    </div>
                                </div>
                                <div class="h5">
                                    ${v.client_name}
                                    <span class="text-02 text-muted">(${v.client_phone})</span>
                                </div>
                                <div class="text-04">Inscrivez-vous via: ${v.ad_name}</div>
                                <div class="text-04">Inscrivez-vous dans: ${v.client_date}</div>
                            </div>
                        </div>
                    </div>PAG_SEP`;	
        }
    });

    var options = {
        data: html.split('PAG_SEP')
    };
    new SmoothPagination(pagination, tableElement, options);
});
searchInput.off('keyup');
searchInput.on('keyup', async e =>
{
    SectionLoader(tableElement);
    var response = await ADVERTISEMENT_MODEL.clients_search({
        query: searchInput.val()
    });
    SectionLoader(tableElement, '');
    tableElement.html('');
    if ( response.code == 404 )
        return;

    var data = response.data;
    var html = '';

    $.each(data, (k,v) =>
    {
        if ( FUI_DISPLAY_LANG.lang == 'ar' )
        {
            html += `<div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card hover-shadow" data-role="AD_CLIENT" data-id="${v.id}" style="cursor: pointer;">
                            <div class="card-body no-pointer">
                                <div class="py-2 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" data-role="CHECK" data-id="${v.id}" value="" id="flexCheckDefault_${v.id}">
                                        <label class="form-check-label pointer" for="flexCheckDefault_${v.id}">
                                            قم بالتحديد
                                        </label>
                                    </div>
                                </div>
                                <div class="h5">
                                    ${v.client_name}
                                    <span class="text-02 text-muted">(${v.client_phone})</span>
                                </div>
                                <div class="text-04">سجل من خلال: ${v.ad_name}</div>
                                <div class="text-04">سجل في: ${v.client_date}</div>
                            </div>
                        </div>
                    </div>PAG_SEP`;	
        }
        else if ( FUI_DISPLAY_LANG.lang == 'fr' )
        {
            html += `<div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card hover-shadow" data-role="AD_CLIENT" data-id="${v.id}" style="cursor: pointer;">
                            <div class="card-body no-pointer">
                                <div class="py-2 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" data-role="CHECK" data-id="${v.id}" value="" id="flexCheckDefault_${v.id}">
                                        <label class="form-check-label pointer" for="flexCheckDefault_${v.id}">
                                            Choisissez
                                        </label>
                                    </div>
                                </div>
                                <div class="h5">
                                    ${v.client_name}
                                    <span class="text-02 text-muted">(${v.client_phone})</span>
                                </div>
                                <div class="text-04">Inscrivez-vous via: ${v.ad_name}</div>
                                <div class="text-04">Inscrivez-vous dans: ${v.client_date}</div>
                            </div>
                        </div>
                    </div>PAG_SEP`;	
        }
    });

    var options = {
        data: html.split('PAG_SEP')
    };
    new SmoothPagination(pagination, tableElement, options);
});
// display all
displayAll();
function displayAll()
{
    searchInput.trigger('keyup');
}
// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement.find('[data-role="CHECK"]');
    for (var i = 0; i < items.length; i++) 
    {
        var check = $(items[i]);
        if ( check.is(':checked') )
            list.push({ id: check.data('id') });
    }

    return list;
}

})

</script>
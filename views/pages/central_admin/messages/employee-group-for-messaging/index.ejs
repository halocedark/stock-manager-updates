            <div class="thead">
                <div class="td">#</div>
                <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th53 %></div>
                <div class="td"><%= UI_DISPLAY_LANG.views.pages.global.th11 %></div>
                <div class="td"></div>
            </div>
            <div class="tbody">
                <!--
                <div class="tr">
                    <div class="td">
                        <input type="checkbox" class="form-check-input pointer" data-role="CHECK" data-classid="">
                    </div>
                    <div class="td">clinicname</div>
                    <div class="td">classname</div>
                </div>
                -->
            </div>
        </div>

	</div>

</div>

<script>

$(function()
{

var page_container = $('#view_employee_group_for_messaging_container');
if ( page_container[0] == undefined ) return;

var ERROR_BOX = page_container.find('#ERROR_BOX');
var create_form = page_container.find('#create_form');
var pagination = page_container.find('#pagination');
var table_element = page_container.find('#table_element');

var search_input = page_container.find('#search_input');
var search_btn = page_container.find('#search_btn');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var employee_select = page_container.find('#employee_select');
var center_select = page_container.find('#center_select');
var employee_job_select = page_container.find('#employee_job_select');

date_start_input.val(CURRENT_DATE)
date_end_input.val(CURRENT_DATE)

// table_element
table_element.on('click', async e =>
{
    var target = $(e.target)

    if ( target.data('role') == 'UPDATE' )
    {
        var parent = target.closest('[data-role="row"]')

        var res = await EMPLOYEE_MODEL.employee_group_for_messaging_showByEmployeeId({
            employee_id: parent.data('employee-id')
        })

        goToPage('messages-employee-group-for-messaging-create', res.data)
    }
})
// search
search_btn.on('click', e =>
{
    displayAll({
        method_type: 'employee_group_for_messaging_search',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            administration_id: center_select.find(':selected').val(),
            employee_type_id: employee_job_select.find(':selected').val(),
            employee_id: employee_select.find(':selected').val(),
        }
    })
})
search_input.on('click', e =>
{
    displayAll({
        method_type: 'employee_group_for_messaging_search',
        query: search_input.val(),
    })
})
// display all
displayAll({
    method_type: 'employee_group_for_messaging_search',
    query: search_input.val()
})
async function displayAll(params)
{
    table_element.find('.tbody').html('')
    SectionLoader(table_element)
    if ( params.method_type == 'employee_group_for_messaging_search' ) var res = await EMPLOYEE_MODEL.employee_group_for_messaging_search(params)

    SectionLoader(table_element, '')

    if ( res.code == 404 ) return

    var data = res.data
    var html = ''

    $.each(data, (k,v) =>
    {
        html += `<div class="tr" data-role="row" data-employee-id="${v.employee_id}" data-employee-name="${v.employee_name}" data-employee-type-id="${v.employee_type_id}" data-employee-type-code="${v.employee_type_code}" data-administration-id="${v.administration_id}" data-administration-name="${v.administration_name}">
                    <div class="td">
                        <input type="checkbox" class="form-check-input pointer" data-role="CHECK">
                    </div>
                    <div class="td">
                        <div class="mb-2">${v.employee_name} (${v.employee_phone})</div> 
                        <div class="mb-2">(${FUI_DISPLAY_LANG.views.pages.global.employee_type_codes[v.employee_type_code]})</div>  
                        <div class="">${v.administration_name}</div>   
                    </div>
                    <div class="td">
                        <div class="mb-2">${v.target_employee_name} (${v.target_employee_phone})</div> 
                        <div class="mb-2">(${FUI_DISPLAY_LANG.views.pages.global.employee_type_codes[v.target_employee_type_code]})</div>   
                        <div class="">${v.target_administration_name}</div> 
                    </div>
                    <div class="td">
                        <button class="btn btn-primary btn-sm pointer" data-role="UPDATE" data-perm="update_employee_group_for_messaging">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>
                </div>PAG_SEP`
    })

    new SmoothPagination(pagination, table_element.find('.tbody'), {
        data: html.split('PAG_SEP')
    })
}


})

</script>
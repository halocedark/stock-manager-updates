<div class="container-fluid" id="allTestimonialsContainer">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.all_testimonials.sectionTitle %></h1>
	</div>
	<div class="alert alert-info mt-3 mb-2" style="display:none;" id="ERROR_BOX">
		<img src="assets/img/utils/info.png" class="alert-icon" alt="">
		<div class="alert-text" id="text"></div>
	</div>
	<div class="mt-3 WRAPPER" id="wrapper01">
		<div class="table-nav">

            <div class="row gx-2 gy-5 mb-2">

				<div class="col-lg-12 col-md-12 col-sm-12">
					<button class="btn btn-danger btn-sm" id="deleteSelectedBTN">
                        <%= UI_DISPLAY_LANG.views.pages.all_testimonials.btn01 %>
                    </button>
				</div>

                <div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/searchbox.template.ejs`, {
                        searchBtnId: 'search_btn',
                        searchInputId: 'search_input',
                    }) -%>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-12">
					<%- include(`${SETTINGS.UI_Settings.MAIN_DIR_NAME}/views/templates/start-end-date.template.ejs`, {
                        dateStartId: 'date_start_input',
                        dateEndId: 'date_end_input',
                    }) -%>
				</div>
                <div class="col-lg col-md col-sm-12">
                    <div class="fs-20 mb-2">
                        <span class="fw-700"><%= UI_DISPLAY_LANG.views.pages.global.text22 %>:</span> <span class="text-success" id="testimonials_total">0</span>
                    </div>
                    <ul class="list-group list-group-flush" id="testimonials_extra_data_list">
                        <!-- <li class="list-group-item">An item</li> -->
                    </ul>
                </div>  

			</div>

		</div>
		<div id="pagination" class="my-3 flex flex-center"></div>
		<div class="row gx-4 gy-3" id="tableElement1">
			<!--
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card hover-shadow" data-role="APT" data-aptid="" style="cursor: pointer;">
					<div class="card-body no-pointer">
						<div class="h5">قسم الحجامة</div>
						<div class="text-02">(4) جلسات</div>
					</div>
				</div>
			</div>
			-->
		</div>
	</div>
	<div class="mt-3 app-block WRAPPER" id="wrapper02" style="display: none;">
		<button class="btn btn-light btn-sm mb-4" data-role="BACK_TO_MAIN_UI_BTN" style="width:120px;">
			<i class="fas fa-arrow-left"></i>
		</button>
		<div class="row gx-4 gy-3" id="tableElement2">
			<!--
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card hover-shadow" data-role="APT" data-aptid="" style="cursor: pointer;">
					<div class="card-body no-pointer">
						<div class="h5">قسم الحجامة</div>
						<div class="text-02">(4) جلسات</div>
					</div>
				</div>
			</div>
			-->
		</div>
	</div>
</div>

<script>

$(function()
{

var page_container = $('#allTestimonialsContainer');
if ( page_container[0] == undefined )
    return;

var ERROR_BOX = page_container.find('#ERROR_BOX');

var deleteSelectedBTN = page_container.find('#deleteSelectedBTN');
var pagination = page_container.find('#pagination');
var tableElement1 = page_container.find('#tableElement1');

var search_input = page_container.find('#search_input');
var search_btn = page_container.find('#search_btn');
var date_start_input = page_container.find('#date_start_input');
var date_end_input = page_container.find('#date_end_input');

var testimonials_total = page_container.find('#testimonials_total');
var testimonials_extra_data_list = page_container.find('#testimonials_extra_data_list');

var tableElement2 = page_container.find('#tableElement2');

var BACK_TO_MAIN_UI_BTN = page_container.find('[data-role="BACK_TO_MAIN_UI_BTN"]');

var wrapper01 = page_container.find('#wrapper01');
var wrapper02 = page_container.find('#wrapper02');
var wrapper03 = page_container.find('#wrapper03');

date_start_input.val(CURRENT_DATE);
date_end_input.val(CURRENT_DATE);
// back to main ui
BACK_TO_MAIN_UI_BTN.off('click');
BACK_TO_MAIN_UI_BTN.on('click', e =>
{
    wrapper01.slideDown(200).siblings('.WRAPPER').slideUp(200);
});
var TestimonialObject = {};
// tableElement1 click
tableElement1.off('click');
tableElement1.on('click', async e =>
{
    var target = $(e.target);
    if ( target.data('role') == 'TESTIMONIAL' )
    {
        TestimonialObject.test_id = target.data('test_id');
        displayInfo();
    }
});
// delete selected
deleteSelectedBTN.off('click');
deleteSelectedBTN.on('click', async e =>
{
    PromptConfirmDialog().then(async c =>
    {
        // display loader
        if ( FUI_DISPLAY_LANG.lang == 'ar' )
            TopLoader("حذف البيانات...");
        else if ( FUI_DISPLAY_LANG.lang == 'fr' )
            TopLoader("Suprimmer les données...");

        var response = await TESTIMONIAL_MODEL.batchDelete(selectedRows());
        // hide loader
        TopLoader('', false);
        if ( response.code == 404 )
        {
            ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
            return;
        }
        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(response.message);
        //
        displayAll();
    });
});
// search
search_btn.on('click', e =>
{
    displayAll({
        method_type: 'search',
        query: search_input.val(),
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
        }
    })
})
search_input.on('keyup', async e =>
{
    displayAll({
        method_type: 'search',
        query: search_input.val(),
    })
});
// display all 
displayAll({
    method_type: 'search',
    query: search_input.val(),
})
async function displayAll(params)
{
    // total
    testimonials_total.text(0)

    testimonials_extra_data_list.html('')
    SectionLoader( tableElement1 );
    if ( params.method_type == 'search' ) var res = await TESTIMONIAL_MODEL.search(params)
    SectionLoader( tableElement1, '' );
    // clear html
    tableElement1.html('');
    if ( res.code == 404 )
        return;

    var data = res.data;
    var html = '';
    var last_data = firstArrayElement(data)
    // total
    testimonials_total.text(data.length)
    $.each(data, (k,v) =>
    {
        var avatar_url = (v.avatar_object) ? JSON.parse(v.avatar_object).url : 'assets/img/utils/avatar.png';
        html += `<div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card hover-shadow" data-role="TESTIMONIAL" data-test_id="${v.test_id}" style="cursor: pointer;">
                        <div class="form-check border-bottom p-1">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault_${v.test_id}" data-role="CHECK" data-test_id="${v.test_id}">
                            <label class="form-check-label" for="flexCheckDefault_${v.test_id}">
                               ${FUI_DISPLAY_LANG.views.pages.global.select}
                            </label>
                        </div>
                        <div class="card-body no-pointer">
                            <div class="row gx-4 mb-2">
                                <div class="col-md-6">
                                    <div class="d-inline-flex flex-center w-100 h-100">
                                        <div class="h5">${v.fullname}</div>
                                    </div>
                                </div>
                                <div class="col-md-6 text-center">
                                    <img src="${avatar_url}" alt="" class="img-thumbnail" style="width:50px;height:50px;">
                                </div>
                            </div>
                            <div class="text-02 text-muted">(${v.job})</div>
                            <div class="text-02 text-muted">(${v.className})</div>
                            <div class="text-04">${FUI_DISPLAY_LANG.views.pages.global.created_at}: ${v.test_date}</div>
                        </div>
                    </div>
                </div>PAG_SEP`;	
    });
    // add html
    var options = {
        data: html.split('PAG_SEP')
    };
    new SmoothPagination(pagination, tableElement1, options);
    // extra data
    testimonials_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.fullname}, </span>
            <span class="text-primary">${last_data.test_date} ${last_data.test_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${last_data.testimonial} </span>
        </li>
    `)
}
// display info
async function displayInfo()
{
    // display loader
    SectionLoader(wrapper02);
    wrapper02.slideDown(200).siblings('.WRAPPER').slideUp(200);
    var response = await TESTIMONIAL_MODEL.show(TestimonialObject.test_id);
    // hide loader
    SectionLoader(wrapper02, '');
    // clear html
    tableElement2.html('');
    if ( response.code == 404 )
        return;

    var data = response.data;
    var html = '';
    
    var avatar_url = (data.avatar) ? data.avatar.url : imgFallback()
    html = `<div class="col-lg-12 col-md-12 col-sm-12 py-2 border-bottom">
                <div class="row gx-4 gy-3">
                    <div class="col-md-6 col-sm-12">
                        <div class="d-inline-flex flex-align-center w-100 h-100">
                            <div>
                                <div class="h5">${data.fullname}</div>
                                <div class="text-02 text-muted">(${data.job})</div>
                                <div class="text-02 text-muted">(${data.className})</div>
                            </div>	
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="d-inline-flex flex-align-center w-100 h-100">
                            <div>
                                <img src="${avatar_url}" class="img-thumbnail img-03" alt="">
                            </div>	
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 py-2 border-bottom">
                <div class="mb-2">
                    <div class="text-04">${data.testimonial}</div>
                </div>
            </div>`;	
    // add html
    tableElement2.html(html);
}
// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement1.find('[data-role="CHECK"]');
    for (var i = 0; i < items.length; i++) 
    {
        var check = $(items[i]);
        TestimonialObject = {
            test_id: check.data('test_id')
        };
        if ( check.is(':checked') )
            list.push(TestimonialObject);
    }

    return list;
}

})

</script>
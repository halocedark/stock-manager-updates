<script>

$(function()
{

var page_container = $('#allVideosContainer');
if ( page_container[0] == undefined )
    return;

var ERROR_BOX = page_container.find('#ERROR_BOX');
var deleteSelectedBTN = page_container.find('#deleteSelectedBTN');
var pagination = page_container.find('#pagination');
var tableElement = page_container.find('#tableElement');

var search_btn = page_container.find('#search_btn')
var search_input = page_container.find('#search_input')
var date_start_input = page_container.find('#date_start_input')
var date_end_input = page_container.find('#date_end_input')

var videos_total = page_container.find('#videos_total');
var videos_extra_data_list = page_container.find('#videos_extra_data_list');

//
// delete selected
deleteSelectedBTN.off('click');
deleteSelectedBTN.on('click', e =>
{
    PromptConfirmDialog().then(async c =>
    {
        deleteSelectedBTN.addClass('disabled')

        var res = await VIDEO_MODEL.batchDelete(selectedRows());
        
        deleteSelectedBTN.removeClass('disabled')
        ERROR_BOX.show(0).delay(7*1000).hide(0).find('#text').text(res.message)
        CreateToast('PS', res.message)
        //
        if ( res.code == 404 ) return
        
        search_input.trigger('keyup')
    });
});
// tableElement click
tableElement.off('click');
tableElement.on('click', async e =>
{
    var target = $(e.target);
    if ( target.data('role') == 'UPDATE' )
    {
        var res = await VIDEO_MODEL.show( target.data('video_id') )

        if ( res.code == 404 )
        {
            CreateToast('PS', res.message, '')
            return
        }

        CreateVideoDialog__CentralAdmin(res.data)
    }
});
// search
search_btn.on('click', e =>
{
    search_input.trigger('keyup')
})
detectTypingEnd(search_input, val =>
{
    displayAll({
        method_type: 'search',
        query: val,
        advanced: {
            start: date_start_input.val(),
            end: date_end_input.val(),
            orderBy: 'video_id',
            order: 'desc',
        }
    })
})

//CreateVideoDialog:video-created
$(document).on('CreateVideoDialog:video-created', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})
//CreateVideoDialog:video-updated
$(document).on('CreateVideoDialog:video-updated', e =>
{
    console.log(e)
    search_input.trigger('keyup')
})
// display all
search_input.trigger('keyup')
async function displayAll(params)
{
    // total
    videos_total.text(0)

    videos_extra_data_list.html('')
    tableElement.html('')
    SectionLoader(tableElement)
    if ( params.method_type == 'search' ) var res = await VIDEO_MODEL.search(params)
    SectionLoader(tableElement, '')
    if ( res.code == 404 ) return

    var data = res.data;
    var html = '';
    var last_data = firstArrayElement(data)
    // total
    videos_total.text(data.length)
    $.each(data, (k,v) =>
    {
        html += `<div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card-02 hover-shadow h-100 w-100 inline-flex">
                        <div class="form-check border-bottom p-1">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault_${v.video_id}" data-role="CHECK" data-video_id="${v.video_id}">
                            <label class="form-check-label" for="flexCheckDefault_${v.video_id}">
                                ${FUI_DISPLAY_LANG.views.pages.global.select}
                            </label>
                        </div>
                        <div class="card-header" style="background:none;">
                            <iframe id="livePreviewIframe" class="d-inline-block" style="background-color:#f9f9f9;width:100%;height:100%;position:absolute;top:0;left:0;" src="${v.video_url}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <div class="card-body">
                            <div class="list-04">
                                <div class="list-item">
                                    <span class="text-04">${strSnippet(v.video_title)}</span>
                                </div>
                                <div class="list-item">
                                    <span class="text-04">${v.video_date}</span>
                                </div>
                                <div class="list-item text-center">
                                    <div class="btn-group btn-group-sm shadow">
                                        <button class="btn btn-primary btn-sm rounded-0" data-role="UPDATE" data-perm="update_video" data-video_id="${v.video_id}">
                                            <i class="fas fa-edit no-pointer"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>PAG_SEP`;
    });

    var options = {
        data: html.split('PAG_SEP')
    };
    new SmoothPagination(pagination, tableElement, options);
    // extra data
    videos_extra_data_list.html(`
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text36 }: </span>
            <span>${FUI_DISPLAY_LANG.views.pages.global.for_} </span>
            <span>${last_data.video_title}, </span>
            <span class="text-primary">${last_data.video_date} ${last_data.video_time}</span> 
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.created_by }: </span>
            <span>${ last_data.employee_name } </span>
        </li>
        <li class="list-group-item">
            <span class="fw-500">${ FUI_DISPLAY_LANG.views.pages.global.text39 }: </span>
            <span>${ strSnippet(last_data.video_desc, 150) } </span>
        </li>
    `)
}
// selected rows
function selectedRows()
{
    var list = [];
    var items = tableElement.find('[data-role="CHECK"]');
    for (var i = 0; i < items.length; i++) 
    {
        var check = $(items[i]);
        if ( check.is(':checked') )
            list.push({ video_id: check.data('video_id') });
    }

    return list;
}

})

</script>
<div class="container-fluid" id="addProductsContainer">
	<div class="wrapper d-none">
		<h1 class="title-medium"><%= UI_DISPLAY_LANG.views.pages.add_products.sectionTitle %></h1>
	</div>
	<div class="mt-3 app-block">
		<div class="alert alert-info my-2" style="display:none;" id="ERROR_BOX">
			<img src="assets/img/utils/info.png" class="alert-icon" alt="">
			<div class="alert-text" id="text"></div>
		</div>
		<div id="wrapper01">
			<form action="#" id="addForm">
				<div class="row gx-4 gy-4">
					<div class="col-lg-6 col-md-6 col-sm-12">
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label01 %></label>
							<input type="text" class="input-text input-text-outline" id="productNameInput">
						</div>
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label02 %></label>
							<textarea rows="4" class="input-text input-text-outline" id="productDescInput"></textarea>
						</div>		
					</div>
					<div class="col-lg-6 col-md-6 col-sm-12">
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label03 %></label>
							<input type="number" step="any" min="0" class="input-text input-text-outline" id="productPriceInput" value="0.00">
						</div>
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label04 %></label>
							<input type="number" step="any" value="0" class="input-text input-text-outline" id="productQuantityInput">
						</div>		
					</div>
					<div class="col-lg-12 col-md-12 col-sm-12">
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label05 %></label>
							<input type="file" class="input-text" id="productImageFile">
							<div class="mt-2">
								<img src="assets/img/utils/placeholder.jpg" id="pimgPreview" class="img-03 img-thumbnail" alt="">
							</div>
						</div>
						<div class="mb-2">
							<label for="" class="form-label"><%= UI_DISPLAY_LANG.views.pages.add_products.form01.label06 %></label>
							<input type="text" class="input-text input-text-outline" id="productBarcodeInput">
						</div>		
					</div>
				</div>
				<div class="">
					<input type="submit" class="btn btn-primary btn-sm shadow" value="<%= UI_DISPLAY_LANG.views.pages.add_products.form01.submitBTN01 %>">
				</div>
			</form>	
		</div>
	</div>
</div>